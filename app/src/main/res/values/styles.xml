<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ProfileImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#DDDDDD</item>
        <item name="colorControlActivated">#FFC107</item>
    </style>

    <style name="SegmentButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">@drawable/bg_segment_button</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_stroke_background</item>
    </style>
</resources>